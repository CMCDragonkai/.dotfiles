#!/usr/bin/env sh

case "$(uname -s)" in

    Linux)
        ip addr 
    ;;

    CYGWIN*|MINGW32*|MSYS*)
        powershell -Command 'Get-NetAdapter | Get-NetIPAddress -ErrorAction SilentlyContinue | Select InterfaceAlias, IPAddress | Sort InterfaceAlias'
    ;;

    *)
        exit 1 
    ;;

esac

